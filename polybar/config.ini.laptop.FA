[colors]
background = #282A2E 
background-alt = #373B41
foreground = #C5C8C6
primary = #F0C674
secondary = #8ABEB7
alert = #A54242
disabled = #707880

[bar/mybar]
width = 100%
height = 24pt
radius = 6

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 3pt

border-size = 4pt
border-color = #00000000

padding-left = 0
padding-right = 1

module-margin = 1

separator = |
separator-foreground = ${colors.disabled}

font-0 = monospace;2
font-1 = Font Awesome 6 Free;2
font-2 = Font Awesome 6 Brands;2
font-3 = Font Awesome 6 Pro;2
font-4 = Jetbrains Mono Nerd;2

modules-left = xworkspaces xwindow
modules-center = date 
modules-right = backlight pulseaudio bluetooth network battery

cursor-click = pointer
cursor-scroll = ns-resize

enable-ipc = true

tray-position = right

[module/backlight]
type = custom/script
tail =  true
label = %{F#F0C674}ï†… %{F-}%output% 
exec = "~/.config/polybar/scripts/brightness.sh display"
scroll-up = "~/.config/polybar/scripts/brightness.sh up"
scroll-down = "~/.config/polybar/scripts/brightness.sh"

[module/xworkspaces]
type = internal/xworkspaces

label-active = %name%
label-active-background = ${colors.background-alt}
label-active-underline= ${colors.primary}
label-active-padding = 1

label-occupied = %name%
label-occupied-padding = 1

label-urgent = %name%
label-urgent-background = ${colors.alert}
label-urgent-padding = 1

label-empty = %name%
label-empty-foreground = ${colors.disabled}
label-empty-padding = 1

[module/xwindow]
type = internal/xwindow
label = %title:0:60:...%

[module/pulseaudio]
type = internal/pulseaudio
format-volume = %{F#F0C674}<ramp-volume> %{F-}<label-volume>
ramp-volume-0 = ğŸ”ˆ
ramp-volume-1 = ğŸ”‰
ramp-volume-2 = ğŸ”Š
label-volume = %percentage%%
label-muted = ğŸ”‡ 
label-muted-foreground = ${colors.disabled}

[module/bluetooth]
type = custom/script
tail = true
label = %{F#F0C674}ïŠ“%{F-} %output%
exec = ~/.config/polybar/scripts/bluetooth.sh status
click-left = ~/.config/polybar/scripts/bluetooth.sh

[module/network]
type = internal/network
interface = wlp2s0
interface-type = wireless
click-left = "alacritty -e nmtui"
format-connected = %{F#F0C674}<ramp-signal> <label-connected>
ramp-signal-0 = ïšª
ramp-signal-1 = ïš«
ramp-signal-2 = ïš«
ramp-signal-3 = ï‡«
ramp-signal-4 = ï‡«
ramp-signal-5 = ï‡«
label-connected = %{F-}%essid%
format-disconnected = <label-disconnected>
label-disconnected = %{F#F0C674}ïš¬

[module/battery]
type = internal/battery
full-at = 99
low-at = 5
battery = BAT0
adapter = ADP1
override-redirect = true
format-discharging = %{F#F0C674}<ramp-capacity><label-discharging>
label-discharging =  %{F#F0C674} %{F-}%percentage%%
format-charging = <label-charging>
label-charging =  %{F#F0C674}ï¶%{F-} %percentage%%
format-full = <label-full>
label-full = %{F#F0C674}ï‰€ %{F-}%percentage%%

ramp-capacity-0 = ï‰„
ramp-capacity-1 = ï‰ƒ
ramp-capacity-2 = ï‰‚ 
ramp-capacity-3 = ï‰
ramp-capacity-4 = ï‰€

[module/date]
type = internal/date
interval = 1.0
date = %H:%M
time = %H:%M
date-alt = %A, %d %B %Y
time-alt = %H:%M:%S

[module/memory]
type = internal/memory
interval = 2
format-prefix = "ó°› "
format-prefix-foreground = ${colors.primary}
label = %percentage_used:2%%

[module/cpu]
type = internal/cpu
interval = 2
; format-prefix = "ó°»  "
format-prefix-foreground = ${colors.primary}
label = ó°»  %percentage:2%%

[module/filesystem]
type = internal/fs
interval = 25
mount-0 = /
label-mounted = %{F#F0C674}/%{F-} %percentage_used%%
label-unmounted = %mountpoint% not mounted
label-unmounted-foreground = ${colors.disabled}
